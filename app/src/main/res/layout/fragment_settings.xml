<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Settings Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APP SETTINGS"
            android:textAppearance="@style/TextAppearance.DotLedger.Caption"
            android:textColor="@color/dark_text_secondary"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <!-- Currency Setting -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.DotLedger.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/btn_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Currency"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_current_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INR (₹)"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                        android:textColor="@color/dark_text_secondary"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Number Format Setting -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.DotLedger.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/btn_number_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Number Format"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_current_number_format"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Indian"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                        android:textColor="@color/dark_text_secondary"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Default Transaction Type -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.DotLedger.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/btn_default_transaction_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Default Transaction Type"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_default_transaction_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expense"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                        android:textColor="@color/dark_text_secondary"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Categories Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORIES"
            android:textAppearance="@style/TextAppearance.DotLedger.Caption"
            android:textColor="@color/dark_text_secondary"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.DotLedger.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/btn_manage_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Manage Categories"
                    android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Features Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEATURES"
            android:textAppearance="@style/TextAppearance.DotLedger.Caption"
            android:textColor="@color/dark_text_secondary"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <!-- SMS Reading Toggle -->
        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.DotLedger.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auto-Read Bank SMS"
                            android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Automatically create transactions from bank SMS"
                            android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                            android:textColor="@color/dark_text_secondary" />
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_sms_reading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        app:thumbTint="@color/white"
                        app:trackTint="@color/dark_text_secondary" />
                </LinearLayout>

                <!-- Permission Status -->
                <LinearLayout
                    android:id="@+id/layout_sms_permission_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_input_field"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⚠️"
                        android:textSize="16sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_sms_permission_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SMS permission required"
                        android:textColor="@color/dark_text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/dot_matrix" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Data Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA MANAGEMENT"
            android:textAppearance="@style/TextAppearance.DotLedger.Caption"
            android:textColor="@color/dark_text_secondary"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.DotLedger.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/btn_export_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Export Data (CSV)"
                    android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.DotLedger.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/btn_import_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Import Data (CSV)"
                    android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                    android:textColor="@color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- About Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT"
            android:textAppearance="@style/TextAppearance.DotLedger.Caption"
            android:textColor="@color/dark_text_secondary"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.DotLedger.Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DotLedger"
                    android:textAppearance="@style/TextAppearance.DotLedger.Headline2"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Version 1.0.0"
                    android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                    android:textColor="@color/dark_text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Track your expenses with Nothing-inspired design"
                    android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                    android:textColor="@color/dark_text_secondary" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/red_dot" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>