<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.DotLedger.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Category Color Dot -->
        <View
            android:id="@+id/view_category_color"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/red_dot" />

        <!-- Category Name -->
        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Food &amp; Dining"
            android:textAppearance="@style/TextAppearance.DotLedger.Body1"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <!-- Default Badge -->
        <TextView
            android:id="@+id/tv_default_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEFAULT"
            android:textAppearance="@style/TextAppearance.DotLedger.Caption"
            android:textColor="@color/dark_text_secondary"
            android:visibility="gone"
            android:layout_marginEnd="8dp" />

        <!-- Edit Icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textAppearance="@style/TextAppearance.DotLedger.Body1"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>