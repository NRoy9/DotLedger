<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="#1C1C1E"
    app:cardElevation="0dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Rank Badge -->
        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/red_dot"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/dot_matrix" />

        <!-- Category Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food &amp; Dining"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/dot_matrix" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_spending"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:progressTint="@color/expense_red"
                android:progressBackgroundTint="#3C3C3E"
                android:progress="75" />

            <TextView
                android:id="@+id/tv_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="75% of expenses"
                android:textColor="@color/dark_text_secondary"
                android:textSize="11sp"
                android:fontFamily="@font/dot_matrix" />
        </LinearLayout>

        <!-- Amount -->
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="â‚¹15,000"
            android:textColor="@color/expense_red"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/dot_matrix" />

    </LinearLayout>

</androidx.cardview.widget.CardView>