<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_background"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FILTER TRANSACTIONS"
            android:textAppearance="@style/TextAppearance.DotLedger.Headline2"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/btn_clear_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear All"
            android:textAppearance="@style/TextAppearance.DotLedger.Body1"
            android:textColor="@color/red_accent"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_marginBottom="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Search in Notes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEARCH IN NOTES"
                android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_search_notes"
                style="@style/Widget.DotLedger.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:hint="Search keywords..."
                app:hintTextAppearance="@style/TextAppearance.DotLedger.Caption"
                app:startIconDrawable="@android:drawable/ic_menu_search">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dot_matrix"
                    android:inputType="text"
                    android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Transaction Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRANSACTION TYPE"
                android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:chipSpacing="8dp"
                app:selectionRequired="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_type_income"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Income"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dot_matrix"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_type_expense"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expense"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dot_matrix"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_type_transfer"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transfer"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dot_matrix"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="2dp" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Accounts -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ACCOUNTS"
                    android:textAppearance="@style/TextAppearance.DotLedger.Caption" />

                <TextView
                    android:id="@+id/btn_select_all_accounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select All"
                    android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                    android:textColor="@color/red_accent"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/btn_clear_accounts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                    android:textColor="@color/red_accent"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_accounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:chipSpacing="8dp"
                app:selectionRequired="false">
                <!-- Accounts will be added dynamically -->
            </com.google.android.material.chip.ChipGroup>

            <!-- Categories -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CATEGORIES"
                    android:textAppearance="@style/TextAppearance.DotLedger.Caption" />

                <TextView
                    android:id="@+id/btn_select_all_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select All"
                    android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                    android:textColor="@color/red_accent"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/btn_clear_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clear"
                    android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                    android:textColor="@color/red_accent"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:chipSpacing="8dp"
                app:selectionRequired="false">
                <!-- Categories will be added dynamically -->
            </com.google.android.material.chip.ChipGroup>

            <!-- Date Range -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DATE RANGE"
                android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:chipSpacing="8dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_date_today"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dot_matrix"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_date_week"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Week"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dot_matrix"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_date_month"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Month"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dot_matrix"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_date_30days"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last 30 Days"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dot_matrix"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="2dp" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Custom Date Range -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:id="@+id/btn_start_date"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_input_field"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FROM"
                        android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_end_date"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_input_field"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TO"
                        android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Amount Range -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AMOUNT RANGE"
                android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                android:layout_marginBottom="8dp" />

            <!-- Quick Amount Filters -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:chipSpacing="8dp"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_amount_small"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&lt; ₹100"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dot_matrix"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_amount_medium"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹100 - ₹1000"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dot_matrix"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_amount_large"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹1000 - ₹10000"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dot_matrix"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_amount_xlarge"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&gt; ₹10000"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dot_matrix"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="2dp" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Custom Amount Range -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.DotLedger.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="Min Amount"
                    app:hintTextAppearance="@style/TextAppearance.DotLedger.Caption"
                    app:prefixText="₹">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_min_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dot_matrix"
                        android:inputType="numberDecimal"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.DotLedger.TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:hint="Max Amount"
                    app:hintTextAppearance="@style/TextAppearance.DotLedger.Caption"
                    app:prefixText="₹">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_max_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dot_matrix"
                        android:inputType="numberDecimal"
                        android:textAppearance="@style/TextAppearance.DotLedger.Body1" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Sort By -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SORT BY"
                android:textAppearance="@style/TextAppearance.DotLedger.Caption"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Sort Order"
                app:boxCornerRadiusBottomEnd="0dp"
                app:boxCornerRadiusBottomStart="0dp"
                app:boxCornerRadiusTopEnd="0dp"
                app:boxCornerRadiusTopStart="0dp"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp"
                app:hintTextAppearance="@style/TextAppearance.DotLedger.Caption">

                <AutoCompleteTextView
                    android:id="@+id/et_sort_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dot_matrix"
                    android:inputType="none"
                    android:textAppearance="@style/TextAppearance.DotLedger.Body1" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.DotLedger.Button.Outlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="CANCEL" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply"
            style="@style/Widget.DotLedger.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="APPLY FILTERS" />
    </LinearLayout>

</LinearLayout>