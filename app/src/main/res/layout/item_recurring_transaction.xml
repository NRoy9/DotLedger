<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#1C1C1E"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Type Indicator -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp">

                <View
                    android:id="@+id/view_type_indicator"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/red_dot" />

                <TextView
                    android:id="@+id/tv_type_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="↓"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Name and Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly Rent"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/dot_matrix" />

                <TextView
                    android:id="@+id/tv_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Monthly"
                    android:textColor="@color/dark_text_secondary"
                    android:textSize="13sp"
                    android:fontFamily="@font/dot_matrix" />
            </LinearLayout>

            <!-- Amount -->
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹5,000"
                android:textColor="@color/expense_red"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/dot_matrix" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#3C3C3E" />

        <!-- Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HDFC Bank"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/dot_matrix" />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Bills &amp; Utilities"
                    android:textColor="@color/dark_text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/dot_matrix" />

                <TextView
                    android:id="@+id/tv_next_occurrence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Next: 01 Jan 2025"
                    android:textColor="@color/dark_text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/dot_matrix" />

                <TextView
                    android:id="@+id/tv_end_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="No end date"
                    android:textColor="@color/dark_text_secondary"
                    android:textSize="11sp"
                    android:fontFamily="@font/dot_matrix"
                    android:visibility="visible" />
            </LinearLayout>

            <!-- Active Switch -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>