<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:gravity="center_vertical">

    <!-- Color Indicator -->
    <View
        android:id="@+id/view_legend_color"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/red_dot" />

    <!-- Category Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_legend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food &amp; Dining"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/dot_matrix" />

        <TextView
            android:id="@+id/tv_legend_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="50.0%"
            android:textColor="@color/dark_text_secondary"
            android:textSize="12sp"
            android:fontFamily="@font/dot_matrix" />
    </LinearLayout>

    <!-- Amount -->
    <TextView
        android:id="@+id/tv_legend_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹5,000"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/dot_matrix" />

</LinearLayout>