<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <!-- Color Dot -->
    <View
        android:id="@+id/view_legend_color"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/red_dot" />

    <!-- Category Name -->
    <TextView
        android:id="@+id/tv_legend_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Food &amp; Dining"
        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <!-- Amount -->
    <TextView
        android:id="@+id/tv_legend_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹5,000"
        android:textAppearance="@style/TextAppearance.DotLedger.Body1"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginEnd="8dp" />

    <!-- Percentage -->
    <TextView
        android:id="@+id/tv_legend_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:textAppearance="@style/TextAppearance.DotLedger.Caption"
        android:textColor="@color/dark_text_secondary"
        android:textSize="12sp" />

</LinearLayout>