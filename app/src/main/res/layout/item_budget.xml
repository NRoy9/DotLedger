<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#1C1C1E"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_budget_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Food &amp; Dining"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/dot_matrix" />

            <TextView
                android:id="@+id/tv_warning_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚠️"
                android:textSize="20sp"
                android:layout_marginEnd="8dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_budget_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹5,000"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/dot_matrix" />
        </LinearLayout>

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:progressTint="@color/income_green"
                android:progressBackgroundTint="#3C3C3E" />

            <TextView
                android:id="@+id/tv_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65%"
                android:textColor="@color/income_green"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/dot_matrix" />
        </LinearLayout>

        <!-- Spent and Remaining Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_spent_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Spent: ₹3,250"
                android:textColor="@color/dark_text_secondary"
                android:textSize="13sp"
                android:fontFamily="@font/dot_matrix" />

            <TextView
                android:id="@+id/tv_remaining_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left: ₹1,750"
                android:textColor="@color/income_green"
                android:textSize="13sp"
                android:fontFamily="@font/dot_matrix" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>