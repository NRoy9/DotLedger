<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark -->
    <style name="Base.Theme.DotLedger" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_light</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/red_accent</item>
        <item name="colorSecondaryVariant">@color/red_accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowBackground">@color/dark_background</item>

        <item name="android:fontFamily">@font/dot_matrix</item>
        <item name="fontFamily">@font/dot_matrix</item>
    </style>

    <style name="Theme.DotLedger" parent="Base.Theme.DotLedger" />

    <!-- Continue with existing text appearances and styles but update colors -->
    <style name="TextAppearance.DotLedger.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/dot_matrix</item>
        <item name="fontFamily">@font/dot_matrix</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.DotLedger.Headline2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:fontFamily">@font/dot_matrix</item>
        <item name="fontFamily">@font/dot_matrix</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="TextAppearance.DotLedger.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/dot_matrix</item>
        <item name="fontFamily">@font/dot_matrix</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="TextAppearance.DotLedger.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/dot_matrix</item>
        <item name="fontFamily">@font/dot_matrix</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/dark_text_secondary</item>
    </style>

    <!-- Button Style - With Rounded Corners -->
    <style name="Widget.DotLedger.Button" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/dot_matrix</item>
        <item name="fontFamily">@font/dot_matrix</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Widget.DotLedger.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/dot_matrix</item>
        <item name="fontFamily">@font/dot_matrix</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Card Style - Rounded Corners -->
    <style name="Widget.DotLedger.Card" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">16dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/dark_background</item>
    </style>

    <!-- TextInputLayout Style - Rounded -->
    <style name="Widget.DotLedger.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/dot_matrix</item>
        <item name="fontFamily">@font/dot_matrix</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <!-- FAB Style - Rounded
    <style name="ShapeAppearance.DotLedger.FAB" parent="ShapeAppearance.Material3.Corner.Full">
        <item name="cornerSize">28dp</item>
    </style> -->

    <!-- Calculator Button Style -->
    <style name="CalcButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_calc_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/dot_matrix</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.DotLedger.Splash" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>